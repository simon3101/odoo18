<templates id="template" xml:space="preserve">
    <t t-inherit="account.TaxTotalsField" t-inherit-mode="extension">
        <xpath expr="(//tr)[1]" position="after">  
                <td class="o_td_label">
                    <span class="o_form_label o_tax_total_label">Amount tax base</span>
                </td>
                <td class="o_td_label">
                    <span style="white-space: nowrap; font-weight: bold;" t-out="formatMonetary(totals.amount_tax_base)" />
                </td>
        </xpath>
    </t>
</templates>

